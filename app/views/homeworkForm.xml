<Alloy>
	<Window title="Homework Form" backgroundImage="/images/home_background.jpg" id="win"  > 
		<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
	 
		<LeftNavButton platform="ios">
			<View onClick="closeWindow" left="0"  width="30" height="35">
				<ImageView left='0'  width="Ti.UI.SIZE"   image="/images/btn-back.png" />
			</View>
		</LeftNavButton> 
		<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15" backgroundColor="#2E2E2E" >
			<ActivityIndicator id="activityIndicator" />
			<Label top="5" class="center" text="Loading" color="#ffffff" />
		</View>   
		<Label class="padding whiteColor h5" top="10">Please fill in homework details</Label>
		<ScrollView class="wfill hsize vert" top="40">
			<View id="table" height="Ti.UI.SIZE"  backgroundColor="#ffffff" layout="vertical" scrollable="false">
					<View id="tvrClass"  height="Ti.UI.SIZE"   selectedBackgroundColor="#ffffff">
						<View  height="45" width="Ti.UI.FILL" class="right-align horz" >
							<Label text="Class" top="12" width="60%" class="title_Label padding-left themeColor"  />   
							<View width="auto" class="right-align hsize">
								<Label text="Assign a class" class="padding font_dark_grey right-align wfill" right="10" id="class_value"  />
							</View>  
						</View> 
					</View> 
					<View class="gray-line" />
					<View id="tvrSubject"  height="Ti.UI.SIZE"   selectedBackgroundColor="#ffffff">
						<View  layout="horizontal" height="45" width="Ti.UI.FILL" textAlign="right" >
							<Label text="Subject" top="12" width="20%" class="title_Label padding-left themeColor"  /> 
							<ImageView  id="getSubject" image="/images/fav.png" left="0" width="20" height="20" />
							<TextField class="h5" borderColor="#ffffff" backgroundColor="#ffffff" id="subject" top="5" bottom='5' right='35'  textAlign="right" hintText="Homework subject" /> 
						</View>
						<ImageView id="addSubject" image="/images/add.png" width="25" height="20" right="5" />
					</View> 
					<View class="gray-line" />
					<View id="tvrUsername"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff">
						<View class="vert" height="Ti.UI.SIZE" width="Ti.UI.FILL" textAlign="right" >
							<Label text="Remark" top="12" width="Ti.UI.FILL" class="title_Label padding-left themeColor"  />  
							<TextArea  horizontalWrap="true" id="remark" class="padding left-align h5 font_dark_grey" width="100%"   hintText="Please fill in title" value=""  borderColor="#ffffff" backgroundColor="#ffffff"  height="150"  suppressReturn="false" >
								<KeyboardToolbar platform="ios">
									<Toolbar>
										<Items> 
											<FlexSpace/>
											<Button onClick="hideKeyboard" backgroundImage="/images/btn-bottom.png" textAlign="right" right="5" width="20" height="20"  />
										</Items>
									</Toolbar>
								</KeyboardToolbar>
							</TextArea>
						</View>
					</View>  
					
					 
					 
					<View class="gray-line" />
					<View id="tvrExpiredDate" height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff"  onClick="showExpiredPicker">
						<View  layout="horizontal" height="Ti.UI.SIZE" width="Ti.UI.FILL" textAlign="right" >
							<Label text="End Date"  top="10" width="60%" class="title_Label padding themeColor"  /> 
							<Label text="" class="padding padding-right font_dark_grey" id="expired_date"  width="auto"  />
						</View>
					</View> 
				</View> 
				<View id="attView" top="10" class="horz wfill" height="50" backgroundColor="#ffffff"  >
					<ScrollView id="attachment" scrollType="horizontal" class="horz hsize"  width="80%" /> 
					<View width="auto" class="hsize" onClick="uploadAttachment" >
						<View class="themeBg wfill" height="50" right="0" ><ImageView id="addLbl" height="25" width="30" image="/images/add_white.png" /></View>
					</View> 
				</View>
				<Button onClick="save" id="saveBtn" class="button" title="Create Homework" top="10"></Button> 
			</ScrollView>
			
			<Toolbar platform="ios" bottom="200" extendBackground="true" borderTop="true" borderBottom="false" id="dateToolbar" visible="false">
				<Items>  
					<Button onClick="hideDatePicker" title="DONE" style="Titanium.UI.iPhone.SystemButtonStyle.DONE"   />
				</Items>
			</Toolbar>
			<View height="0" bottom="200" id="selectorView" bottom="0"  zIndex="99">
				 
				 <Picker id="dateExpiredPicker"
				          onChange="changeExpiredDate" 
				          type="Ti.UI.PICKER_TYPE_DATE" 
				           height="200"
				           visible="false">  
				 </Picker>
			</View>	 
			
			
	</Window> 
</Alloy>
 